{
  "private": true,
  "devDependencies": {
    "babelify": "^6.4.0",
    "browserify": "^11.2.0",
    "coveralls": "^2.11.4",
    "gulp": "^3.9.0",
    "gulp-mocha": "^2.1.3",
    "istanbul": "^0.3.21",
    "mocha": "^2.3.3",
